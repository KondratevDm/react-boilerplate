{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@assets": [
        "assets"
      ],
      "@/*": [
        "*"
      ],
      "@components": [
        "components"
      ],
      "@utils": [
        "utils"
      ]
    },
  },
  "exclude": [
    "node_modules"
  ],
}